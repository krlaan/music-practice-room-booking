@page
@model WebApp.Pages.Rooms.DeleteModel

@{
    ViewData["Title"] = "Delete Room";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4 text-danger">Delete Practice Room</h1>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">Are you sure you want to delete this room?</h5>
                    <dl class="row justify-content-center text-center">
                        <dt class="col-4">Room Number</dt>
                        <dd class="col-6">@Html.DisplayFor(model => model.Room.RoomNumber)</dd>
                        <dt class="col-4">@Html.DisplayNameFor(model => model.Room.Size)</dt>
                        <dd class="col-6">@Html.DisplayFor(model => model.Room.Size)</dd>
                        <dt class="col-4">Grand Piano</dt>
                        <dd class="col-6">@Html.DisplayFor(model => model.Room.HasGrandPiano)</dd>
                        <dt class="col-4">Upright Piano</dt>
                        <dd class="col-6">@Html.DisplayFor(model => model.Room.HasUprightPiano)</dd>
                        <dt class="col-4">Sound-proofed</dt>
                        <dd class="col-6">@Html.DisplayFor(model => model.Room.IsSoundproofed)</dd>
                    </dl>

                    <form method="post" class="text-center mt-4">
                        <input type="hidden" asp-for="Room.Id"/>
                        <input type="submit" value="Delete Room" class="btn btn-danger"/>
                        <a asp-page="./Index" class="btn btn-secondary ml-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
