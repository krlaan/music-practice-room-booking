@page
@model WebApp.Pages.People.DeleteModel

@{
    ViewData["Title"] = "Delete Person";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4 text-danger">Delete Student</h1>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">Are you sure you want to delete this person?</h5>
                    <dl class="row justify-content-center text-center">
                        <dt class="col-4">Full Name</dt>
                        <dd class="col-6">@Html.DisplayFor(model => model.Person.FullName)</dd>
                        <dt class="col-4">Program</dt>
                        <dd class="col-6">@Html.DisplayFor(model => model.Person.ProgramType)</dd>
                    </dl>

                    <form method="post" class="text-center mt-4">
                        <input type="hidden" asp-for="Person.Id"/>
                        <input type="submit" value="Delete Person" class="btn btn-danger"/>
                        <a asp-page="./Index" class="btn btn-secondary ml-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
