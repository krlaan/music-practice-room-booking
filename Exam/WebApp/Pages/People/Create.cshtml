@page
@model WebApp.Pages.People.CreateModel

@{
    ViewData["Title"] = "Add New Person";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h1 class="text-center mb-4">Add New Student</h1>
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Person.FullName" class="control-label">Full Name</label>
                            <input asp-for="Person.FullName" class="form-control"/>
                            <span asp-validation-for="Person.FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Person.ProgramType" class="control-label">Program</label>
                            <select asp-for="Person.ProgramType" class="form-control">
                                <option value="Performance">Performance</option>
                                <option value="Education">Education</option>
                                <option value="Minor">Minor</option>
                            </select>
                            <span asp-validation-for="Person.ProgramType" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-4 text-center">
                            <input type="submit" value="Add Student" class="btn btn-primary"/>
                            <a asp-page="Index" class="btn btn-secondary ml-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
