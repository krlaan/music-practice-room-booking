@page
@using BLL
@model WebApp.Pages.People.IndexModel

@{
    ViewData["Title"] = "Students & Instructors";
}

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h1 class="text-center mb-4 text-primary fw-bold">Students</h1>
        <form method="get" class="mb-3">
            <div class="row justify-content-center align-items-end g-2">
                <div class="col-md-4">
                    <label for="searchName" class="form-label">Name</label>
                    <input type="text" id="searchName" name="SearchName" value="@Model.SearchName" class="form-control"
                           placeholder="Enter name..."/>
                </div>
                <div class="col-md-3">
                    <label for="searchProgram" class="form-label">Program</label>
                    <select id="searchProgram" name="SearchProgram" class="form-select">
                        <option value="">All</option>
                        @foreach (var prog in Enum.GetValues(typeof(BLL.EProgramType)))
                        {
                            if (Model.SearchProgram == prog.ToString())
                            {
                                <option value="@prog" selected>@prog</option>
                            }
                            else
                            {
                                <option value="@prog">@prog</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
                <div class="col-md-2">
                    <a asp-page="Create" class="btn btn-success w-100">Add New Student</a>
                </div>
            </div>
        </form>
        <div class="table-responsive">
            <table class="table table-striped table-hover rounded shadow-sm text-center">
                <thead>
                <tr>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Person[0].FullName)
                    </th>
                    <th class="text-center">
                        Program
                    </th>
                    <th class="text-center">
                        Weekly Hours
                    </th>
                    <th class="text-center">
                        Graduation Progress
                    </th>
                    <th class="text-center">
                        Skipped
                    </th>
                    <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Person)
                {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.ProgramType)
                        </td>
                        <td class="text-center">
                            <strong>@item.CurrentWeekUsedHours</strong> / @item.WeeklyQuotaHours
                        </td>
                        <td class="text-center" style="min-width: 200px;">
                            @{
                                var totalHours = (decimal) item.TotalPracticeHours;
                                var requiredHours = 200m; // m = decimal
                                var percentage = Math.Min((totalHours / requiredHours) * 100, 100);
                                var progressBarClass = percentage >= 100 ? "bg-success" : (percentage >= 75 ? "bg-info" : (percentage >= 50 ? "bg-warning" : "bg-danger"));
                            }
                            <div class="d-flex align-items-center">
                                <div class="progress flex-grow-1" style="height: 20px;">
                                    <div class="progress-bar @progressBarClass" role="progressbar"
                                         style="width: @percentage.ToString("F0")%"
                                         aria-valuenow="@totalHours"
                                         aria-valuemin="0"
                                         aria-valuemax="200">
                                    </div>
                                </div>
                                <span class="ml-2 text-nowrap"><small>@totalHours / @requiredHours</small></span>
                            </div>
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.NoShowCount)
                        </td>
                        <td class="text-center">
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
