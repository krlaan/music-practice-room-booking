@page
@model WebApp.Pages.NoShowManagementModel

@{
    ViewData["Title"] = "No-Show Management";
}

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h1 class="text-center mb-4 text-primary fw-bold">No-Show Management</h1>

        <div class="mb-3 text-center">
            <a asp-page="/Bookings/Index" class="btn btn-secondary">Back to Bookings</a>
        </div>

        @if (Model.PastBookings.Count == 0)
        {
            <div class="alert alert-info text-center">
                No past bookings to review.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover rounded shadow-sm text-center">
                    <thead>
                        <tr>
                            <th class="text-center">Student</th>
                            <th class="text-center">Room</th>
                            <th class="text-center">Start Time</th>
                            <th class="text-center">Duration</th>
                            <th class="text-center">Current No-Shows</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model.PastBookings)
                        {
                            <tr>
                                <td class="text-center">@booking.Student.FullName</td>
                                <td class="text-center">
                                    @{
                                        var features = new List<string> { booking.Room.RoomNumber, booking.Room.Size.ToString() };
                                        if (booking.Room.HasGrandPiano) features.Add("Grand Piano");
                                        if (booking.Room.HasUprightPiano) features.Add("Upright Piano");
                                        if (booking.Room.IsSoundproofed) features.Add("Soundproofed");
                                        <span>@string.Join(" | ", features)</span>
                                    }
                                </td>
                                <td class="text-center">@booking.StartTime.ToString("MMM dd, yyyy HH:mm")</td>
                                <td class="text-center">@booking.DurationHours hrs</td>
                                <td class="text-center">
                                    <span class="badge bg-@(booking.Student.NoShowCount > 0 ? "warning text-dark" : "success")">
                                        @booking.Student.NoShowCount
                                    </span>
                                </td>
                                <td class="text-center">
                                    <form method="post" asp-page-handler="MarkNoShow" asp-route-bookingId="@booking.Id" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Mark No-Show
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
